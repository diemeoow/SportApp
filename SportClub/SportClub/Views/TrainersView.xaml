<UserControl x:Class="SportClub.Views.TrainersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNum}" Width="Auto"/>
                <DataGridTextColumn Header="Специализация" Binding="{Binding Specialization.Name}" Width="Auto"/>
                <DataGridTextColumn Header="Дата принятия" Binding="{Binding DateOfAcceptance}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,5">
            <Button Content="Загрузить"   Command="{Binding LoadCommand}"   Margin="2"/>
            <Button Content="Добавить"    Command="{Binding AddCommand}"    Margin="2"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>
