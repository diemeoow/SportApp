<UserControl x:Class="SportClub.Views.WorkoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="120"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Time}" Width="80"/>
                <DataGridTextColumn Header="Тренер" Binding="{Binding Trainer.FullName}" Width="150"/>
                <DataGridTextColumn Header="Зал" Binding="{Binding Room.Name}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,5">
            <Button Content="Load"   Command="{Binding LoadCommand}"   Margin="2"/>
            <Button Content="Add"    Command="{Binding AddCommand}"    Margin="2"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>
