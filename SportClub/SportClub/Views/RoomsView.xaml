<UserControl x:Class="SportClub.Views.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Вместимость" Binding="{Binding Capacity}" Width="100"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding RoomType.Name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,5">
            <Button Content="Load"   Command="{Binding LoadCommand}"   Margin="2"/>
            <Button Content="Add"    Command="{Binding AddCommand}"    Margin="2"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>
