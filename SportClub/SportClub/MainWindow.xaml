<Window x:Class="SportClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SportClub Admin" Height="600" Width="900">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Экспорт JSON" Command="{Binding ExportJsonCommand}" Margin="5"/>
            <Button Content="Импорт JSON" Command="{Binding ImportJsonCommand}" Margin="5"/>
        </ToolBar>
        <TabControl>
            <TabItem Header="Клиенты">
                <ContentControl Content="{Binding ClientsVM}"/>
            </TabItem>
            <TabItem Header="Тренеры">
                <ContentControl Content="{Binding TrainersVM}"/>
            </TabItem>
            <TabItem Header="Тренировки">
                <ContentControl Content="{Binding WorkoutsVM}"/>
            </TabItem>
            <TabItem Header="Абонементы">
                <ContentControl Content="{Binding SubscriptionsVM}"/>
            </TabItem>
            <TabItem Header="Помещения">
                <ContentControl Content="{Binding RoomsVM}"/>
            </TabItem>
            <TabItem Header="Оборудование">
                <ContentControl Content="{Binding EquipmentVM}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>