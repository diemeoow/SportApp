<Window x:Class="SportClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SportClub Admin"
        xmlns:views="clr-namespace:SportClub.Views"
        xmlns:vm="clr-namespace:SportClub.ViewModels"
        Height="600" Width="900"
        Background="{StaticResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Top Toolbar -->
        <Border DockPanel.Dock="Top"
         Background="{StaticResource AccentBrush}"
         Effect="{StaticResource CardShadow}"
         CornerRadius="0,0,6,6" Padding="10">
            <TextBlock Text="Панель управления SportClub"
                   FontSize="26" FontWeight="SemiBold"
                   Margin="10"
                   Foreground="{StaticResource AppBackground}"/>
        </Border>
        <ToolBar DockPanel.Dock="Bottom" Background="{StaticResource AccentBrush}">
            <Button Content="Экспорт JSON"
                    Command="{Binding ExportJsonCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="White" Foreground="{StaticResource AccentBrush}"/>
            <Button Content="Импорт JSON"
                    Command="{Binding ImportJsonCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="White" Foreground="{StaticResource AccentBrush}"/>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Navigation -->
            <Border Grid.Column="0"
                    Background="{StaticResource CardBackground}"
                    Effect="{StaticResource CardShadow}"
                    Margin="10" CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBlock Text="Меню" FontSize="20" FontWeight="Bold"
                               Margin="0,0,0,6" Foreground="{StaticResource AccentBrush}"/>
                    <Button Content="Клиенты"
                            Command="{Binding NavigateCommand}" CommandParameter="Clients"
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                    <Button Content="Тренеры"
                            Command="{Binding NavigateCommand}" CommandParameter="Trainers"
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                    <Button Content="Тренировки"
                            Command="{Binding NavigateCommand}" CommandParameter="Workouts"
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                    <Button Content="Абонементы"
                            Command="{Binding NavigateCommand}" CommandParameter="Subscriptions"
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                    <Button Content="Помещения"
                            Command="{Binding NavigateCommand}" CommandParameter="Rooms"
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                    <Button Content="Оборудование"
                            Command="{Binding NavigateCommand}" CommandParameter="Equipment" 
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBackground}"
                    Effect="{StaticResource CardShadow}"
                    Margin="10" CornerRadius="8" Padding="10">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>